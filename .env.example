# =================================================================
# === APPLICATION CONFIGURATION (.env.example) ===
# =================================================================

# Flask secrets
SECRET_KEY=change-me-dev-secret
JWT_SECRET_KEY=change-me-jwt-secret

# Server
FLASK_ENV=development
PORT=8080
HOSTNAME=medical-app-local

# =================================================================
# === DATABASE CONFIGURATION ===
# =================================================================
# SQLite (default, used if DATABASE_URL is not set)
# Leave unset to use sqlite:///medical_app.db
# DATABASE_URL=sqlite:///medical_app.db

# MySQL (production example)
# DATABASE_URL=mysql+pymysql://db_user:db_password@db_host:3306/db_name

# =================================================================
# === GOOGLE / GEMINI CONFIGURATION ===
# =================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Storage bucket for transcripts
GCS_BUCKET_NAME=your-gcs-bucket-name

# =================================================================
# === EMAIL (2FA) CONFIGURATION ===
# =================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email_username
MAIL_PASSWORD=your_email_password_or_app_password
MAIL_DEFAULT_SENDER=noreply@medical-app.com

# =================================================================
# === AWS / S3 AUDIT LOGGING ===
# =================================================================
AUDIT_LOG_BUCKET=your-audit-log-s3-bucket
AWS_REGION=us-east-1

# One of the standard ways to provide AWS credentials (choose one):
# 1) Environment variables (below) OR 2) Shared credentials file OR 3) Instance/profile role
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_SESSION_TOKEN=optional_session_token

# =================================================================
# === SESSION / AUTH SETTINGS (OPTIONAL) ===
# =================================================================
# These have sensible defaults in code; set to override.
# SESSION_TIMEOUT_MINUTES=30
# MFA_CODE_EXPIRATION_MINUTES=10
